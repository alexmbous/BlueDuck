<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/date_dialog_bg"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_picker"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/main_colors"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <com.blueduck.ride.utils.CycleWheelView
                android:id="@+id/left_list"
                android:layout_width="80dp"
                android:layout_height="match_parent">
            </com.blueduck.ride.utils.CycleWheelView>

            <com.blueduck.ride.utils.CycleWheelView
                android:id="@+id/center_list"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
            </com.blueduck.ride.utils.CycleWheelView>

            <com.blueduck.ride.utils.CycleWheelView
                android:id="@+id/right_list"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
            </com.blueduck.ride.utils.CycleWheelView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/skip_btn_bg"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>